{
	"name": "vrl-lsp",
	"description": "A basic language server/client for Vector Remap Language.",
	"author": "Arshia Soleimani",
	"license": "MIT",
	"publisher": "arshiyasolei",
	"version": "0.2.0",
	"categories": [],
	"keywords": [
		"vector",
		"vector remap language"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:vrl"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "vrl",
				"extensions": [
					".vrl"
				],
				"configuration": "./client/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "vrl",
				"scopeName": "source.vrl",
				"path": "./client/syntaxes/vrl.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "pnpm install --frozen-lockfile && pnpm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && pnpm install --frozen-lockfile && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^9.1.1",
		"@types/node": "^16.18.110",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.57.1",
		"mocha": "^9.2.2",
		"typescript": "^4.9.5"
	}
}
